{
  "name": "rbtools-js",
  "version": "1.5.0-beta2",
  "private": true,
  "description": "A module package to manipulate several Rock Band game files.",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Ruggery Iury CorrÃªa <ruggeryiury@gmail.com>",
  "license": "MIT",
  "keywords": [
    "tool",
    "rock-band",
    "javascript",
    "typescript",
    "python"
  ],
  "dependencies": {
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "exiftool-vendored": "^29.0.0",
    "jschardet": "^3.1.2",
    "path-js": "file:./packages/path-js-2.0.0.tgz",
    "set-default-options": "file:./packages/set-default-options-1.0.0.tgz",
    "tempy": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "copyfiles": "^2.4.1",
    "eslint": "^9.3.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.5",
    "eslint-plugin-n": "^17.7.0",
    "globals": "^15.3.0",
    "prettier": "^3.2.5",
    "tsx": "^4.10.5",
    "type-fest": "^4.32.0",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.9.0"
  },
  "scripts": {
    "build": "pnpm run clear && tsc --project ./prod.tsconfig.json && copyfiles -u 1 src/bin/**/* dist",
    "clear": "rimraf dist",
    "dev": "tsx watch tests/test.ts",
    "format": "prettier --write src",
    "lint": "eslint src/**/*.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./core": {
      "import": "./dist/core.js",
      "types": "./dist/core.d.ts"
    },
    "./lib": {
      "import": "./dist/lib.js",
      "types": "./dist/lib.d.ts"
    },
    "./rockshelf": {
      "import": "./dist/rockshelf.js",
      "types": "./dist/rockshelf.d.ts"
    }
  }
}
