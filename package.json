{
  "name": "rbtools-js",
  "version": "1.0.0",
  "private": true,
  "description": "A highly typed module package to manipulate several Rock Band game files.",
  "type": "module",
  "main": "module/index.js",
  "module": "module/index.js",
  "types": "module/index.d.ts",
  "author": "Ruggery Iury CorrÃªa <ruggeryiury@gmail.com>",
  "license": "MIT",
  "keywords": [
    "tool",
    "rock-band",
    "javascript",
    "typescript"
  ],
  "dependencies": {
    "axios": "^1.7.2",
    "dotenv": "^16.4.5",
    "dta-parser": "file:./packages/dta-parser-2.0.2.tgz",
    "jschardet": "^3.1.2",
    "path-js": "file:./packages/path-js-1.4.0.tgz",
    "winston": "^3.13.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "copyfiles": "^2.4.1",
    "eslint": "^9.3.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsdoc": "^48.2.5",
    "eslint-plugin-n": "^17.7.0",
    "globals": "^15.3.0",
    "prettier": "^3.2.5",
    "tsx": "^4.10.5",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.9.0"
  },
  "scripts": {
    "build": "pnpm run clear && tsc --project ./prod.tsconfig.json && copyfiles -u 1 src/bin/**/* dist && copyfiles -u 1 src/python/**/* dist",
    "clear": "rimraf dist",
    "dev": "tsx watch tests/test.ts",
    "format": "prettier --write src",
    "lint": "eslint src/**/*.ts"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js"
    },
    "./core": {
      "import": "./dist/core.js"
    },
    "./database": {
      "import": "./dist/database.js"
    },
    "./errors": {
      "import": "./dist/errors.js"
    },
    "./exec": {
      "import": "./dist/exec.js"
    },
    "./lib": {
      "import": "./dist/lib.js"
    },
    "./python": {
      "import": "./dist/python.js"
    }
  }
}
